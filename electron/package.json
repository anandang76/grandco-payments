{
  "name": "electron-app",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:css": "npx tailwindcss -i ./src/assets/tailwind.css -o ./src/assets/output.css --watch",
    "build": "electron-builder --mac"

  },
  "devDependencies": {
    "electron": "^33.0.1",
    "electron-builder": "^25.1.8",
    "tailwindcss": "^3.4.14"
  },
  "build": {
    "appId": "com.example.yourapp",
    "mac": {
      "category": "public.app-category.utilities",
      "target": "dmg",
      "sign": false
    }
  }

}
